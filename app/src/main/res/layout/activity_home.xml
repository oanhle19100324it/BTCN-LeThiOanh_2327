<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, Alex!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_tasks_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youâ€™ve got \n 5 tasks today ðŸ“…"
            android:textSize="36sp"
            android:paddingBottom="16dp" />


        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search something.."
            android:padding="12dp"
            android:background="@drawable/search_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/media_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media title"
                android:textSize="16sp"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_my_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My tasks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tab_recently"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recently"
                android:gravity="center"
                android:padding="8dp"
                android:background="#F0F0F0"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/tab_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today"
                android:gravity="center"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tab_upcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upcoming"
                android:gravity="center"
                android:padding="8dp"
                android:background="#F0F0F0"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/tab_later"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Later"
                android:gravity="center"
                android:padding="8dp"
                android:background="#F0F0F0"
                android:textColor="#808080" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/task1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 1"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/taskProgress1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40%"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/task1"
                    android:layout_marginTop="4dp" />

                <ProgressBar
                    android:id="@+id/line_task1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/taskProgress1"
                    android:layout_marginTop="8dp"
                    android:progress="40"
                    android:progressDrawable="@android:drawable/progress_horizontal" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginStart="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/task2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task 2"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/taskProgress2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22%"
                    android:textSize="14sp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/task2"
                    android:layout_marginTop="4dp" />

                <ProgressBar
                    android:id="@+id/line_task2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/taskProgress2"
                    android:layout_marginTop="8dp"
                    android:progress="22"
                    android:progressDrawable="@android:drawable/progress_horizontal" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
